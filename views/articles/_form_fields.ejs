<div class="form-group mb-4">
    <label class="font-bold block" for="title">Title:</label>
    <input type="text" name="title" id="title" class="form-control" value="<%= article.title %>" required>    
  </div>
  
  <div class="form-group mb-4">
    <label class="font-bold block" for="description">Description:</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
  </div>
  <div class="form-group mb-4">
    <label class="font-bold block" for="markdown">Markdown:</label>
    <textarea name="markdown" id="markdown" class="form-control" rows=15 required><%= article.markdown %></textarea>
  </div>
    
  <a href="/home" class="bg-gray-500 text-white px-4 py-2 rounded-md">Cancel</a>
  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Save</button>
  
  